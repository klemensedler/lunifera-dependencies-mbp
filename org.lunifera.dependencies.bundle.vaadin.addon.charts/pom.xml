<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.lunifera.dependencies</groupId>
		<artifactId>lunifera-dependencies-mbp</artifactId>
		<version>0.3.3-SNAPSHOT</version>
	</parent>

	<artifactId>org.lunifera.dependencies.bundle.vaadin.addon.charts</artifactId>
	<name>Lunifera Dependencies : Vaadin Charts</name>
	<packaging>bundle</packaging>
	<description>Charts</description>
	<version>3.0.0</version>

	<properties>
		<lunifera.build.ignore.baseline>true</lunifera.build.ignore.baseline>
	</properties>

	<scm>
		<connection>${lunifera.scm.connection}</connection>
		<developerConnection>${lunifera.scm.connection.dev}</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<dependencies>
		<dependency>
			<groupId>org.lunifera.dependencies</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>org.lunifera.dependencies</groupId>
			<artifactId>jackson-annotations</artifactId>
			<version>2.5.0</version>
		</dependency>
		<dependency>
			<groupId>org.lunifera.dependencies</groupId>
			<artifactId>jackson-core</artifactId>
			<version>2.5.1</version>
		</dependency>
		<dependency>
			<groupId>org.lunifera.dependencies</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.5.2</version>
		</dependency>
		<dependency>
			<groupId>org.lunifera.dependencies</groupId>
			<artifactId>vaadin-charts-model</artifactId>
			<version>3.0.0</version>
			<classifier>alpha9</classifier>
		</dependency>
		<dependency>
			<groupId>com.vaadin.addon</groupId>
			<artifactId>vaadin-charts</artifactId>
			<version>3.0.0-alpha9</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>Vaadin Charts</Bundle-Name>
						<Bundle-Version>3.0.0</Bundle-Version>
						<Bundle-SymbolicName>org.lunifera.dependencies.bundle.vaadin.addon.charts</Bundle-SymbolicName>
						<Embed-Dependency>
							groupId=org.lunifera.dependencies;artifactId=commons-io;version=1.4;scope=compile,
							groupId=org.lunifera.dependencies;artifactId=jackson-annotations;version=2.5.0;scope=compile,
							groupId=org.lunifera.dependencies;artifactId=jackson-core;version=2.5.1;scope=compile,
							groupId=org.lunifera.dependencies;artifactId=jackson-databind;version=2.5.2;scope=compile,
							groupId=org.lunifera.dependencies;artifactId=vaadin-charts-model;version=3.0.0;classifier=alpha9;scope=compile,
							groupId=com.vaadin.addon;artifactId=vaadin-charts;version=3.0.0-alpha9;scope=compile
						</Embed-Dependency>
						<Import-Package>
							*
						</Import-Package>
						<Export-Package>
							*
						</Export-Package>
						<_nouses>true</_nouses>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>vaadin-addons</id>
			<url>http://maven.vaadin.com/vaadin-addons</url>
		</repository>
		<repository>
			<id>vaadin-snapshots</id>
			<url>http://oss.sonatype.org/content/repositories/vaadin-snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>lunifera-thirdparty</id>
			<url>http://maven.lunifera.org:8086/nexus/content/repositories/thirdparty/</url>
		</repository>
	</repositories>
</project>
